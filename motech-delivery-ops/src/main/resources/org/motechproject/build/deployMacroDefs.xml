<?xml version="1.0" encoding="UTF-8"?>
<antlib>
    <typedef file="${path_to_common_macrodefs}/envMacroDefs.xml"/>
    <typedef file="${path_to_common_macrodefs}/activemqMacroDefs.xml"/>
    <typedef file="${path_to_common_macrodefs}/couchdbMacroDefs.xml"/>
    <typedef file="${path_to_common_macrodefs}/mysqlMacroDefs.xml"/>
    <typedef file="${path_to_common_macrodefs}/tomcatMacroDefs.xml"/>
    <typedef file="${path_to_common_macrodefs}/hudsonMacroDefs.xml"/>
    <typedef file="${path_to_common_macrodefs}/nexusMacroDefs.xml"/>
    <typedef file="${path_to_common_macrodefs}/seedMacroDefs.xml"/>

    <macrodef name="download.app.from.remote">
        <attribute name="app.name"/>
        <attribute name="remote.location"/>
        <attribute name="download.dir"/>
        <sequential>
            <copy tofile="@{download.dir}/@{app.name}.war" flatten="true" overwrite="true">
                <resources>
                    <url url="@{remote.location}"/>
                </resources>
            </copy>
        </sequential>
    </macrodef>
</antlib>
